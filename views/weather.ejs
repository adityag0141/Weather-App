<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- My own CSS -->
    <link rel="stylesheet" href="css/style.css">

    <title>Weather App</title>
</head>

<body>
    <div class="d-flex justify-content-center align-items-end main-body">
        <form class="form-inline" action="/" method="post">
            <div class="row">
                <div class="col-md-5 col-lg-5 col-12 ">
                    <input type="text" class="place form-control" name="place" id="place" required>
                </div>
                <div class="col-md-4 col-lg-4 col-12">
                    <select class="form-select units" aria-label="Default select example" name="unit" required>
                        <option selected>Unit</option>
                        <option value="metric">Celsius</option>
                        <option value="imperial">Fahreneit</option>
                    </select>
                </div>
                <div class="col-md-3 col-lg-3 col-12">
                    <button type="submit" class="btn btn-outline-light">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="city d-flex justify-content-center align-items-end">
        <h1>
            <%= area %>
        </h1>
    </div>
    <div class="temperature d-flex justify-content-center align-items-center ">
        <h2>
            <%= temperature %>
                <% if(symbol=="C" || symbol=="F" ){%>
                    <sup>o</sup>
                    <%= symbol %>
                        <%}%>
                        <br>
                        <p><%= description %></p>
        </h2>
        
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->

    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC5mYwayyYIf6dzmnpyPoK419KkWNucuks&libraries=places&callback=initMap">
        </script>
    <script src="js/index.js"></script>
</body>

</html>